{
  "compilerOptions": {
    "noImplicitAny": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "module": "esNext",
    "target": "es5",
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "outDir": "./lib/",
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
  ]
}